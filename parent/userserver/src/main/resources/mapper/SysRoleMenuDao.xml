<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsh.userserver.dao.SysRoleMenuDao">

    <resultMap type="com.wsh.usercom.entity.SysRoleMenu" id="SysRoleMenuMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="permissionId" column="permission_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="deleteStatus" column="delete_status" jdbcType="INTEGER"/>
    </resultMap>
    <delete id="delete" parameterType="java.lang.Integer">
      delete  FROM `sys_role_menu` where role_id=#{roleId}
    </delete>


    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleMenuMap">
        select
          id, role_id, permission_id, create_time, update_time, delete_status
        from sys_role_menu
        where id = #{id} and delete_status=1
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRoleMenuMap">
        select
          id, role_id, permission_id, create_time, update_time, delete_status
        from sys_role_menu
        <where>
            <if test="id != null">
                and id = #{id}
           </if>            
         and delete_status=1
        </where>
        order by  id  desc
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sys_role_menu(role_id, permission_id, create_time, update_time, delete_status)
        values (#{roleId}, #{permissionId}, #{createTime}, #{updateTime}, #{deleteStatus})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sys_role_menu
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="permissionId != null">
                permission_id = #{permissionId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="deleteStatus != null">
                delete_status = #{deleteStatus},
            </if>
        </set>
        where id = #{id}
    </update>

  
</mapper>