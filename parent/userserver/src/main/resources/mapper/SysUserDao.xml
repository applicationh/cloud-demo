<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsh.userserver.dao.SysUserDao">

    <resultMap type="com.wsh.usercom.entity.SysUser" id="SysUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="displayName" column="display_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="lastLoginTime" column="last_login_time" jdbcType="TIMESTAMP"/>
        <result property="level" column="level" jdbcType="INTEGER"/>
        <result property="deleteStatus" column="delete_status" jdbcType="INTEGER"/>
    </resultMap>
    <resultMap type="com.wsh.usercom.entity.SysUser" id="SysUserMapAndRoleName">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="displayName" column="display_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="lastLoginTime" column="last_login_time" jdbcType="TIMESTAMP"/>
        <result property="level" column="level" jdbcType="INTEGER"/>
        <result property="deleteStatus" column="delete_status" jdbcType="INTEGER"/>
        <collection property="sysRoleVos"
                    select="com.wsh.userserver.dao.SysRoleDao.getUserRoleName"
                    column="id"></collection>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysUserMap">
        select
          id, username, password, display_name, create_time, update_time, last_login_time, level, delete_status
        from sys_user
        where id = #{id} and delete_status=1
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysUserMapAndRoleName">
        select
          id, username, password, display_name, create_time, update_time, last_login_time, level, delete_status
        from sys_user
        <where>
            <if test="id != null">
                and id = #{id}
           </if>
            <if test="username != null and username != ''">
                username like  concat('%',#{username},'%')
            </if>
        </where>
        order by  id  desc
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sys_user(username, password, display_name, create_time, update_time, last_login_time, level, delete_status)
        values (#{username}, #{password}, #{displayName}, #{createTime}, #{updateTime}, #{lastLoginTime}, #{level}, #{deleteStatus})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sys_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="displayName != null and displayName != ''">
                display_name = #{displayName},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="lastLoginTime != null">
                last_login_time = #{lastLoginTime},
            </if>
            <if test="level != null">
                level = #{level},
            </if>
            <if test="deleteStatus != null">
                delete_status = #{deleteStatus},
            </if>
        </set>
        where id = #{id}
    </update>

  
</mapper>