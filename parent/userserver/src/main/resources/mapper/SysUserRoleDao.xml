<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shineon.userserver.dao.SysUserRoleDao">

    <resultMap type="com.shineon.usercom.entity.SysUserRole" id="SysUserRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="deleteStatus" column="delete_status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysUserRoleMap">
        select
          id, role_id, user_id, create_time, delete_status
        from sys_user_role
        where id = #{id} and delete_status=1
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysUserRoleMap">
        select
          id, role_id, user_id, create_time, delete_status
        from sys_user_role
        <where>
            <if test="id != null">
                and id = #{id}
           </if>            and delete_status=1
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sys_user_role(role_id, user_id, create_time, delete_status)
        values (#{roleId}, #{userId}, #{createTime}, #{deleteStatus})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sys_user_role
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="deleteStatus != null">
                delete_status = #{deleteStatus},
            </if>
        </set>
        where id = #{id}
    </update>

  
</mapper>